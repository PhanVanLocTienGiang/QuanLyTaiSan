
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>EditRole</h1>

@model SystemAsset02.ViewModel.EditRoleViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post" class="mt-3">
    <div class="form-group  row">
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled class="form-control" />
    </div>
    <div class="form-group  row">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group  row">
        <button type="submit" class=" btn btn-primary">Update </button>
    </div>
    <div class="card">

        <div class="card-header">
            <h3>User in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.User.Any())
            {
                foreach (var user in Model.User)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5>None people</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administraion" asp-action="EditUserInRole" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Add User Remove User</a>

        </div>
    </div>
</form>

